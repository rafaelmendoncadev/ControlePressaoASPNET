@model IEnumerable<ControlePressao.Models.Peso>

@{
    ViewData["Title"] = "Medições de Peso";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5">
        <i class="fas fa-weight text-primary"></i> Medições de Peso
    </h1>
    <a asp-action="Create" class="btn btn-primary btn-lg">
        <i class="fas fa-plus"></i> Nova Medição
    </a>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-chart-line"></i> Histórico de Medições
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                <i class="fas fa-calendar"></i> @Html.DisplayNameFor(model => model.DataHora)
                            </th>
                            <th>
                                <i class="fas fa-ruler-vertical"></i> @Html.DisplayNameFor(model => model.Altura)
                            </th>
                            <th>
                                <i class="fas fa-weight"></i> @Html.DisplayNameFor(model => model.PesoKg)
                            </th>
                            <th>
                                <i class="fas fa-calculator"></i> IMC
                            </th>
                            <th>
                                <i class="fas fa-clipboard-check"></i> Classificação
                            </th>
                            <th>
                                <i class="fas fa-target"></i> Status do Peso
                            </th>
                            <th>
                                <i class="fas fa-sticky-note"></i> Observações
                            </th>
                            <th>
                                <i class="fas fa-cogs"></i> Ações
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataHora)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Altura) cm
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PesoKg) kg
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.IMC</span>
                                </td>
                                <td>
                                    @{
                                        string badgeClass = item.ClassificacaoIMC switch
                                        {
                                            "Baixo peso" => "bg-warning",
                                            "Peso normal" => "bg-success",
                                            "Sobrepeso" => "bg-warning",
                                            "Obesidade Grau I" => "bg-danger",
                                            "Obesidade Grau II" => "bg-danger",
                                            "Obesidade Grau III" => "bg-dark",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass">@item.ClassificacaoIMC</span>
                                </td>
                                <td>
                                    @{
                                        string statusClass = item.StatusPeso.Contains("ideal") ? "text-success" : 
                                                            item.StatusPeso.Contains("acima") ? "text-warning" : "text-info";
                                    }
                                    <small class="@statusClass">@item.StatusPeso</small>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Observacoes))
                                    {
                                        <span title="@item.Observacoes">
                                            @(item.Observacoes.Length > 30 ? item.Observacoes.Substring(0, 30) + "..." : item.Observacoes)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm" title="Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-weight fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">Nenhuma medição de peso encontrada</h4>
            <p class="text-muted">Comece registrando sua primeira medição de peso!</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Registrar Primeira Medição
            </a>
        </div>
    </div>
}