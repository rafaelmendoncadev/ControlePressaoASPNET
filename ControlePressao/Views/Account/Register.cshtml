@model ControlePressao.Models.RegisterViewModel
@{
    ViewData["Title"] = "Criar Conta";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<div class="card login-card">
    <div class="card-body">
        <h2 class="login-title text-center">
            <i class="fas fa-user-plus text-primary"></i>
            <br>
            Criar Conta
        </h2>
        
        <form asp-action="Register" method="post" class="login-form">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="form-label fw-bold">
                            <i class="fas fa-user me-1"></i>@Html.DisplayNameFor(m => m.Nome)
                        </label>
                        <input asp-for="Nome" class="form-control" placeholder="Digite seu nome completo" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label fw-bold">
                            <i class="fas fa-envelope me-1"></i>Email
                        </label>
                        <input asp-for="Email" class="form-control" placeholder="Digite seu email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Senha" class="form-label fw-bold">
                            <i class="fas fa-lock me-1"></i>Senha
                        </label>
                        <input asp-for="Senha" class="form-control" placeholder="Digite sua senha" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmarSenha" class="form-label fw-bold">
                            <i class="fas fa-lock me-1"></i>@Html.DisplayNameFor(m => m.ConfirmarSenha)
                        </label>
                        <input asp-for="ConfirmarSenha" class="form-control" placeholder="Confirme sua senha" />
                        <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="DataNascimento" class="form-label fw-bold">
                            <i class="fas fa-calendar me-1"></i>@Html.DisplayNameFor(m => m.DataNascimento)
                        </label>
                        <input asp-for="DataNascimento" class="form-control" type="date" />
                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Telefone" class="form-label fw-bold">
                            <i class="fas fa-phone me-1"></i>Telefone
                        </label>
                        <input asp-for="Telefone" class="form-control" placeholder="(11) 99999-9999" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                        <div class="form-text">Campo opcional</div>
                    </div>
                </div>
            </div>
            
            <div class="form-group mb-4">
                <button type="submit" class="btn btn-primary w-100 login-btn">
                    <i class="fas fa-user-plus me-2"></i>
                    Criar Conta
                </button>
            </div>
        </form>
        
        <div class="text-center mt-3">
            <small class="text-muted">
                Já tem uma conta? 
                <a asp-action="Login" class="text-primary">Faça login aqui</a>
            </small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 