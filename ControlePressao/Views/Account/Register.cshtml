@model ControlePressao.Models.RegisterViewModel
@{
    ViewData["Title"] = "Criar Conta";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<div class="auth-card auth-card-large animate-fade-in-up">
    <div class="auth-header">
        <div class="auth-logo">
            <i class="fas fa-user-plus"></i>
        </div>
        <h1 class="auth-title">Criar sua conta</h1>
        <p class="auth-subtitle">Preencha os dados para começar</p>
    </div>
    
    <div class="auth-body">
        <form asp-action="Register" method="post" class="auth-form">
            <div asp-validation-summary="All" class="alert alert-danger alert-modern mb-4" role="alert" style="display: none;"></div>
            
            <div class="form-floating mb-3">
                <input asp-for="Nome" class="form-control modern-input" placeholder="Digite seu nome completo" />
                <label asp-for="Nome" class="form-label">
                    <i class="fas fa-user me-2"></i>Nome Completo
                </label>
                <span asp-validation-for="Nome" class="invalid-feedback"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control modern-input" placeholder="Digite seu email" type="email" />
                <label asp-for="Email" class="form-label">
                    <i class="fas fa-envelope me-2"></i>Email
                </label>
                <span asp-validation-for="Email" class="invalid-feedback"></span>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Senha" class="form-control modern-input" placeholder="Digite sua senha" type="password" />
                        <label asp-for="Senha" class="form-label">
                            <i class="fas fa-lock me-2"></i>Senha
                        </label>
                        <span asp-validation-for="Senha" class="invalid-feedback"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="ConfirmarSenha" class="form-control modern-input" placeholder="Confirme sua senha" type="password" />
                        <label asp-for="ConfirmarSenha" class="form-label">
                            <i class="fas fa-lock me-2"></i>Confirmar Senha
                        </label>
                        <span asp-validation-for="ConfirmarSenha" class="invalid-feedback"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="DataNascimento" class="form-control modern-input" type="text" placeholder="dd/mm/aaaa" pattern="\d{2}/\d{2}/\d{4}" maxlength="10" />
                        <label asp-for="DataNascimento" class="form-label">
                            <i class="fas fa-calendar me-2"></i>Data de Nascimento
                        </label>
                        <span asp-validation-for="DataNascimento" class="invalid-feedback"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Telefone" class="form-control modern-input" placeholder="(11) 99999-9999" />
                        <label asp-for="Telefone" class="form-label">
                            <i class="fas fa-phone me-2"></i>Telefone (opcional)
                        </label>
                        <span asp-validation-for="Telefone" class="invalid-feedback"></span>
                    </div>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary btn-modern w-100 mb-3">
                <i class="fas fa-user-plus me-2"></i>
                Criar Conta
            </button>
        </form>
        
        <div class="auth-divider">
            <span>ou</span>
        </div>
        
        <div class="auth-footer">
            <p class="text-center mb-0">
                Já tem uma conta? 
                <a asp-action="Login" class="auth-link">Faça login aqui</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}