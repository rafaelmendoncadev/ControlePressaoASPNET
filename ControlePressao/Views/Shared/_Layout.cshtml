<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ControlePressao</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/themes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ControlePressao.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/icon-fixes.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold btn-with-icon" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-heartbeat text-white"></i> ControlePressao
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white btn-with-icon transition-all" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-chart-line"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white btn-with-icon transition-all" asp-area="" asp-controller="Pressao" asp-action="Index">
                                <i class="fas fa-heartbeat"></i> Pressão
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white btn-with-icon transition-all" asp-area="" asp-controller="Glicose" asp-action="Index">
                                <i class="fas fa-droplet"></i> Glicose
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white btn-with-icon transition-all" asp-area="" asp-controller="Peso" asp-action="Index">
                                <i class="fas fa-weight"></i> Peso
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white btn-with-icon transition-all" asp-area="" asp-controller="Relatorios" asp-action="Index">
                                <i class="fas fa-chart-bar"></i> Relatórios
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white btn-with-icon transition-all" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-plus-circle"></i> Novo
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item btn-with-icon" asp-controller="Pressao" asp-action="Create">
                                    <i class="fas fa-heartbeat icon-danger"></i> Medição de Pressão
                                </a></li>
                                <li><a class="dropdown-item btn-with-icon" asp-controller="Glicose" asp-action="Create">
                                    <i class="fas fa-droplet icon-warning"></i> Medição de Glicose
                                </a></li>
                                <li><a class="dropdown-item btn-with-icon" asp-controller="Peso" asp-action="Create">
                                    <i class="fas fa-weight icon-dark"></i> Medição de Peso
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white btn-with-icon transition-all" asp-controller="Account" asp-action="Logout">
                                <i class="fas fa-sign-out-alt"></i> Sair
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid">
        <!-- Exibir mensagens de sucesso/erro -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show alert-modern animate-slide-in-down" role="alert">
                <i class="fas fa-check-circle alert-icon"></i> 
                <div class="alert-title">Sucesso!</div>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show alert-modern animate-slide-in-down" role="alert">
                <i class="fas fa-exclamation-triangle alert-icon"></i> 
                <div class="alert-title">Erro!</div>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    &copy; 2025 - ControlePressao - Sistema de Controle de Saúde
                </div>
                <div class="col-md-6 text-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Definir exports, module e require globalmente para evitar erro CommonJS
        if (typeof exports === 'undefined') {
            var exports = {};
        }
        if (typeof module === 'undefined') {
            var module = { exports: {} };
        }
        if (typeof require === 'undefined') {
            var require = function() { return {}; };
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js"></script>
    <!-- date-fns removido para evitar erro de require -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/theme-toggle.js" asp-append-version="true"></script>
    <script src="~/js/health-charts.js" asp-append-version="true"></script>
    <script src="~/js/datetime-localization.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
